@using DreamGames.Database.Games;
@model Tag


    <form method="post" asp-controller="TagAdmin" asp-action="CreateTag">
        <div><strong>Add tags</strong></div>
        <label for="name">Tag name:</label>
        <input asp-for="@Model.TagName" id="name"/>
        <label for="name">Slug:</label>
        <input asp-for="@Model.Slug" id="slug"/>
        <label for="name">RawG tag ID:</label>
        <input type="text" asp-for="@Model.RawGTagId" id="rawgTagId"/>
        <input type="submit" value="Add"/>
    </form>